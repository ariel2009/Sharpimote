<Application x:Class="SharpimoteClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SharpimoteClient"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="WrapPanelCorner" TargetType="{x:Type Border}">
            <Setter Property="CornerRadius" Value="12"/>
        </Style>
        <Style x:Key="StackPanelCorner" TargetType="{x:Type Border}">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>
        <Style x:Key="Hatten">
            <Setter Property="TextElement.FontFamily" Value="resources\fonts\montserrat-semibold.ttf"/>
        </Style>
    </Application.Resources>
</Application>
